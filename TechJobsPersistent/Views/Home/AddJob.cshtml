@using TechJobsPersistent.ViewModels;

@model AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="AddJob" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select class="form-control" asp-for="EmployerId" asp-items="Model.Employers"></select>
        <span></span>
    </div>
    <div class="form-group">

        @foreach (var skill in Model.Skills)
        {
            <label name="selectedSkills">@skill.Name</label>
            <input type="checkbox" name="selectedSkills" value="@skill.Id" />
        }
    </div>


    <input class="btn btn-primary" type="submit" value="Add Job" />
</form>

<a asp-controller="Skill" asp-action="Add">Add A Skill</a>
